<?xml version="1.0" encoding="UTF-8"?>
<package packagerversion="1.4.10" version="2.0"
  xmlns="http://pear.php.net/dtd/package-2.0"
  xmlns:tasks="http://pear.php.net/dtd/tasks-1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0
                      http://pear.php.net/dtd/tasks-1.0.xsd
                      http://pear.php.net/dtd/package-2.0
                      http://pear.php.net/dtd/package-2.0.xsd">
 <name>phptok</name>
 <channel>pear.phpunit.de</channel>
 <summary>TextUI frontend for PHP_TokenStream</summary>
 <description>TextUI frontend for PHP_TokenStream</description>
 <lead>
  <name>Sebastian Bergmann</name>
  <user>sb</user>
  <email>sb@sebastian-bergmann.de</email>
  <active>yes</active>
 </lead>
 <date>2011-MM-DD</date>
 <version>
  <release>1.0.0</release>
  <api>1.0.0</api>
 </version>
 <stability>
  <release>devel</release>
  <api>devel</api>
 </stability>
 <license>BSD License</license>
 <notes>http://github.com/sebastianbergmann/phptok/tree</notes>
 <contents>
  <dir name="/">
   <dir name="PHP">
    <dir name="Token">
     <dir name="Stream">
      <dir name="TextUI">
       <file baseinstalldir="/" name="Command.php" role="php">
        <tasks:replace from="@package_version@" to="version" type="package-info" />
       </file>
      </dir>
     </dir>
    </dir>
   </dir>
   <file baseinstalldir="/" name="phptok.php" role="script">
    <tasks:replace from="/usr/bin/env php" to="php_bin" type="pear-config"/>
    <tasks:replace from="@php_bin@" to="php_bin" type="pear-config" />
    <tasks:replace from="@package_version@" to="version" type="package-info" />
   </file>
   <file baseinstalldir="/" name="phptok.bat" role="script">
    <tasks:replace from="@php_bin@" to="php_bin" type="pear-config" />
    <tasks:replace from="@bin_dir@" to="bin_dir" type="pear-config" />
    <tasks:replace from="@package_version@" to="version" type="package-info" />
   </file>
  </dir>
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.2.7</min>
   </php>
   <pearinstaller>
    <min>1.9.4</min>
   </pearinstaller>
   <package>
    <name>ConsoleTools</name>
    <channel>components.ez.no</channel>
    <min>1.6</min>
   </package>
   <package>
    <name>PHP_TokenStream</name>
    <channel>pear.phpunit.de</channel>
    <min>1.1.0</min>
   </package>
  </required>
 </dependencies>
 <phprelease>
  <installconditions>
   <os>
    <name>windows</name>
   </os>
  </installconditions>
  <filelist>
   <install as="phptok" name="phptok.php" />
   <install as="phptok.bat" name="phptok.bat" />
  </filelist>
 </phprelease>
 <phprelease>
  <filelist>
   <install as="phptok" name="phptok.php" />
   <ignore name="phptok.bat" />
  </filelist>
 </phprelease>
</package>
